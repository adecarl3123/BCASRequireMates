@using System.Text
@model IEnumerable<UserDocumentRequest>


@{
    var statuses = new[] { "Pending", "Approved", "Rejected" };
    var optionsHtml = new StringBuilder();

    foreach (var request in Model)
    {
        foreach (var status in statuses)
        {
            var selected = request.Status == status ? "selected" : "";
            optionsHtml.Append($"<option value=\"{status}\" {selected}>{status}</option>");
        }
    }
}
}

<h2>Document Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>Document</th>
            <th>Student</th>
            <th>Request Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var requests in Model)
        {
            <tr>
                <td>@requests.DocumentId</td>
                <td>@requests.UserId/td>
                <td>@requests.RequestDate.ToShortDateString()</td>
                <td>@requests.Status</td>
                <td>
                    <form asp-action="UpdateRequestStatus" method="post">
                        <input type="hidden" name="id" value="@requests.Id" />
                        <select name="status" class="form-control">
                                @Html.Raw(optionsHtml.ToString())
                        </select>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>


                </td>
            </tr>
        }
    </tbody>
</table>
